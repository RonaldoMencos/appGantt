<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SrvUser</servlet-name>
        <servlet-class>controller.SrvUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvActividad</servlet-name>
        <servlet-class>controller.SrvActividad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvMantenimientoActividad</servlet-name>
        <servlet-class>controller.SrvMantenimientoActividad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SrvActualizarActividad</servlet-name>
        <servlet-class>controller.SrvActualizarActividad</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SrvUser</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/SrvUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvActividad</servlet-name>
        <url-pattern>/SrvActividad</url-pattern>
        <url-pattern>/nuevaActividad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvMantenimientoActividad</servlet-name>
        <url-pattern>/SrvMantenimientoActividad</url-pattern>
        <url-pattern>/mantenimientoActividad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SrvActualizarActividad</servlet-name>
        <url-pattern>/SrvActualizarActividad</url-pattern>
        <url-pattern>/actualizarActividad</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
